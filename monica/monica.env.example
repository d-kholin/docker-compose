# Monica Configuration
# Copy this file to monica.env and update the values

# Application Key (generate with: echo -n 'base64:'; openssl rand -base64 32)
APP_KEY=base64:your_32_character_base64_key_here

# Database Configuration
DB_HOST=monica-db
DB_USERNAME=monica
DB_PASSWORD=your_secure_database_password
DB_DATABASE=monica

# MySQL Root Password
MYSQL_ROOT_PASSWORD=your_secure_root_password

# Timezone
TZ=America/Edmonton

# Application URL (your public HTTPS URL when behind a proxy)
APP_URL=https://your-domain.com

# Force HTTPS (set to true when behind SSL termination proxy)
FORCE_HTTPS=true

# Trusted Proxies (your proxy server IP or * for all)
TRUSTED_PROXIES=*

# Optional: Email Configuration (uncomment and configure if needed)
# MAIL_MAILER=smtp
# MAIL_HOST=your-smtp-host
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME="Monica"

# Optional: Cache Configuration (uncomment if using Redis)
# CACHE_DRIVER=redis
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Optional: Queue Configuration (uncomment if using Redis)
# QUEUE_CONNECTION=redis

